---
// src/components/Hero.astro
// Placeholder for name, can be made a prop or come from a global data store
const yourName = "Koutselakis Manos";
---

<section id="about" class="hero-section content-section">
    <div class="container stagger-children">
        <h1>Hi, I'm {yourName}</h1>
        <p class="subtitle">
            I build useful (and cool) tech. Explore my work below.
        </p>
        <div class="hero-actions">
            <a href="#projects" class="button-primary">View My Work</a>
            <a href="#contact" class="button-secondary">Get In Touch</a>
        </div>
    </div>
</section>

<!-- Scoped CSS for Hero.astro can be added here if needed -->
<!-- Most styles are currently global in src/styles/global.css -->
<style>
    .hero-section {
        position: relative; /* Ensure child elements can be positioned above the pseudo-element if needed */
        overflow: hidden; /* Keep the gradient contained */
        /* background-color: var(--color-background); Fallback, though already set globally */
    }

    .hero-section::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: -1; /* Place the gradient behind the content */
        background: linear-gradient(
            135deg,
            color-mix(
                in srgb,
                var(--color-accent-primary) 20%,
                transparent 80%
            ),
            color-mix(in srgb, var(--color-background) 50%, transparent 90%),
            color-mix(
                in srgb,
                var(--color-accent-secondary) 20%,
                transparent 80%
            )
        );
        background-size: 400% 400%; /* Make the gradient large for smooth animation */
        animation: futuristicGradient 25s ease infinite;
    }

    .hero-section > .container {
        position: relative; /* Ensure content is above the ::before pseudo-element */
        z-index: 1;
    }

    @keyframes futuristicGradient {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }

    @media (prefers-reduced-motion: reduce) {
        .hero-section::before {
            animation-play-state: paused;
        }
    }

    /* Add any other hero-specific styles here if they are not covered by global.css */
</style>
