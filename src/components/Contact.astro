---
// src/components/Contact.astro
import { Mail, Github, Linkedin } from "@lucide/astro";
import type { AstroComponentFactory } from "astro/runtime/server/index.js";

interface ContactLink {
    href: string;
    icon: AstroComponentFactory | any; // Type for an Astro component reference
    text: string;
    target: "_self" | "_blank";
}

const contactLinks: ContactLink[] = [
    {
        href: "mailto:koutselakismanos@gmail.com",
        icon: Mail,
        text: "Email",
        target: "_self",
    },
    {
        href: "https://github.com/koutselakismanos",
        icon: Github,
        text: "GitHub",
        target: "_blank",
    },
    {
        href: "https://www.linkedin.com/in/manos-koutselakis-6b90a6229/",
        icon: Linkedin,
        text: "LinkedIn",
        target: "_blank",
    },
];
---

<section id="contact" class="content-section">
    <div class="container stagger-children">
        <h2>Let's Build Something Together</h2>
        <p>
            I'm passionate about leveraging technology to solve real-world
            problems and am always open to discussing new IoT ventures, software
            development roles, or collaborative side projects. If you have an
            idea or opportunity you'd like to explore, please don't hesitate to
            reach out.
        </p>
        <div class="contact-methods">
            {
                contactLinks.map((link) => (
                    <a
                        href={link.href}
                        target={link.target}
                        rel={
                            link.target === "_blank"
                                ? "noopener noreferrer"
                                : undefined
                        }
                    >
                        <link.icon class="contact-icon" size={24} /> {link.text}
                    </a>
                ))
            }
        </div>
    </div>
</section>

<style>
    /* .contact-methods styles are in global.css */
    /* Add any section-specific styles for #contact if needed */
    .contact-icon {
        margin-right: 8px; /* Space between icon and text */
        vertical-align: middle; /* Aligns icon nicely with text */
        /* Size and color are passed as props to @lucide/astro components e.g. size={24} color="currentColor" */
        /* Default stroke is currentColor, so it should match text color unless overridden */
    }
</style>
