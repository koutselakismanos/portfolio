---
// src/components/Projects.astro
import { projectsData } from "../data/projects.js";
import ProjectCard from "./ProjectCard.astro";

const softwareProjects = projectsData.filter(
    (project) => !project.pcbModelPath,
);
---

<section id="projects" class="content-section">
    <div class="container">
        <h2 class="animated-on-scroll">Featured Projects & Endeavors</h2>
        <p class="animated-on-scroll">
            A selection of fun projects I am working on.
        </p>
        <div class="projects-grid stagger-children">
            {
                softwareProjects.map((project, index) => (
                    <ProjectCard
                        title={project.title}
                        startDate={project.startDate}
                        endDate={project.endDate}
                        shortDescription={project.shortDescription}
                        images={project.images}
                        link={project.link}
                        techPills={project.techPills}
                        animationOrder={index}
                    />
                ))
            }
        </div>
    </div>
</section>

<style>
    /* Styles for .projects-grid and .project-card are in global.css */
    /* Add any section-specific styles for #projects if needed */
</style>
